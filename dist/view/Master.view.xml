<headerToolbar>
<OverflowToolbar >
<content>
<ToolbarSpacer ></ToolbarSpacer>
<Label text="Sales Document:-"></Label>
<Input id="idSo" editable="true" width="100px"></Input>
<ToolbarSpacer ></ToolbarSpacer>
<Button text="Press Here" icon="sap-icon://touch" press="onPress"></Button>
<Button text="Save" icon="sap-icon://save" press="onSave"></Button>
</content>
</OverflowToolbar>
</headerToolbar>
<infoToolbar>
<OverflowToolbar >
<Label text="Wide Range of Sales Documet(s) Details"></Label>
